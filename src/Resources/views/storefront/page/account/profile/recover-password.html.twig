{% sw_extends '@Storefront/storefront/page/account/profile/recover-password.html.twig' %}

{% block page_account_profile_recover_password_mail_input %}
    {{ parent() }}
    {% if page.endereco_config.pluginActive and ( not page.endereco_config.controllerOnlyWhitelist or controllerName in page.endereco_config.controllerWhitelist ) %}
        <input
            type="hidden"
            name="endereco_data_marker"
            value="emailServices"
            data-container-selector="form"
            data-container-type="form"
            data-used-prefix="recover_password"
            data-has-object="no"
            data-email-selector="email[email]"
        >
    {% endif %}
{% endblock %}
